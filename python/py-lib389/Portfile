PortSystem          1.0
PortGroup           python 1.0

set _name           389-ds-base

name                py-lib389
version             1.4.2.5
categories-append   net
platforms           darwin
supported_archs     noarch
license             GPL-2

maintainers         {mit.edu:quentin @quentinmit} openmaintainer

description         Tools and libraries for testing 389 Directory Server

long_description    ${description}

homepage            https://directory.fedoraproject.org/
master_sites	    https://releases.pagure.org/389-ds-base/
distname	    ${_name}-${version}
use_bzip2	    yes

checksums           rmd160  e28e2a0153e4e82ac139229ff6dceeeb2c53de12 \
                    sha256  e48488cc8f6fd13d189fa8bfd953008077952f037933b1c224d0b5e59f514248 \
		    size    9783331

worksrcdir 	    ${distname}/src/lib389
patchfiles	    patch-relative-paths.diff \
		    patch-fix-replication.diff \
		    patch-without-systemd.diff

python.versions     37

if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools \
    			    port:py${python.version}-argparse-manpage \
    			    port:py${python.version}-argcomplete

    depends_lib-append      port:py${python.version}-argcomplete \
    			    port:py${python.version}-asn1 \
    			    port:py${python.version}-asn1-modules \
    			    port:py${python.version}-ldap


    livecheck.type  none
} else {
    livecheck.type  regex
    livecheck.url   [lindex ${master_sites} 0]
    livecheck.regex ">${_name}-(\\d+(\\.\\d+)+)\\${extract.suffix}<"
}
